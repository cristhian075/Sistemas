<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
    integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


</head>

<body>
  <h1>Usuarios</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Nombres</th>
        <th scope="col">Apellidos</th>
        <th scope="col">N_telefono</th>
        <th scope="col">Correo</th>
        <th scope="col">Direccion</th>
        <button type="button" class="btn btn-success btn-block" data-toggle="modal" data-target="#agregar">
          agregar
        </button>

      </tr>
    </thead>
    <tbody>
      {{#each usuarios}}
      <tr>
        <th scope="row">{{id_usuario}}</th>
        <td>{{nombres}}</td>
        <td>{{apellidos}}</td>
        <td>{{n_telefono}}</td>
        <td>{{correo}}</td>
        <td>{{direccion}}</td>
        <td>
          <!-- Button eliminar -->
          <button type="button" class="btn btn-danger btn-block" data-toggle="modal"
            data-target="#eliminar{{id_usuario}}">
            Eliminar
          </button>
          <!-- Button modificar -->
          <button type="button" class="btn btn-info btn-block" data-toggle="modal"
            data-target="#modificar{{id_usuario}}">
            Modificar
          </button>

          <!-- Modal eliminar-->
          <div class="modal fade" id="eliminar{{id_usuario}}" tabindex="-1" role="dialog"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">Â¿Esta seguro de eliminar a {{nombres}} {{apellidos}}?
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <a href="eliminarusuario/{{id_usuario}}" class="btn btn-danger btn-block"
                    class="fas fa-sign-in-alt">Eliminar</a>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                </div>
              </div>
            </div>
          </div>

          <!-- Modal agregar-->
          <div class="modal fade" id="agregar" data-backdrop="static" tabindex="-1" role="dialog"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">Agregar ususario</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="agregarusuario" method="POST">
                    <div class="form-group">
                      <label for=""></label>
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="nombres" id=""
                        placeholder="digite el nombre completo">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="apellidos" id="" placeholder="digite los apellidos">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="n_telefono" id=""
                        placeholder="digite el numero de telefono">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="correo" id="" placeholder="digite el correo">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="direccion" id="" placeholder="digite la direccion">
                    </div>
                    <div class="form-group">
                      <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"> Agregar</i>
                      </button>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>

                </div>
              </div>
            </div>
          </div>

          <!-- Modal modificar-->
          <div class="modal fade" id="modificar{{id_usuario}}" data-backdrop="static" tabindex="-1" role="dialog"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">Modificar usuario: {{nombre}} {{apellidos}}</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <form action="modificarusuario/{{id_usuario}}" method="POST">
                    <div class="form-group">
                      <label for=""></label>
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="nombres" value="{{nombres}}"
                        placeholder="digite el nombre completo">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="apellidos" value="{{apellidos}}"
                        placeholder="digite los apellidos">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="n_telefono" value="{{n_telefono}}"
                        placeholder="digite el numero de telefono">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="correo" value="{{correo}}"
                        placeholder="digite el correo">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="direccion" value="{{direccion}}"
                        placeholder="digite la direccion de domicilio">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="id_ciudad" value="{{id_ciudad}}"
                        placeholder="digite el valor de la ciudad">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="id_barrio" value="{{id_barrio}}"
                        placeholder="digite el valor del barrio">
                    </div>
                    <div class="form-group">
                      <input class="form-control" type="text" name="roles_id_rol" value="{{roles_id_rol}}"
                        placeholder="digite el valor del rol del usuario">
                    </div>
                    <div class="form-group">
                      <button class="btn btn-info btn-block" type="submit"><i class="fas fa-sign-in-alt"> Editar</i>
                      </button>
                    </div>
                  </form>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Salir</button>
                </div>
              </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>


  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
    integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
    integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
    integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
    crossorigin="anonymous"></script>
</body>

</html>