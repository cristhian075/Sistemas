<div class="container p-4">
    <div class="row">
        <div class="col-md-6 ">
            <div class="card">
                <div class="card-body">
                     <form action="/facturas/agregar" method="POST">
                        <div class="form-group">
                            <label for=""></label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="total" id="" placeholder="digite el total de la compra">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="fecha_facturacion" id="" placeholder="digite la fecha de facturacion">
                        </div>
                        <h5>Pedidos</h5>
                        <select name="id_usuario">
                              {{#each pedidos}}
                              <option value="{{id_pedido}}">{{id_usuario}}</option>
                              {{/each}}
                        </select><br>
                        <br>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"> Agregar</i> </button>
                        </div>
                    </form>